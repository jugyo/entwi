!!!
%html
  %head
    %title Entwi
    != stylesheet_link_tag :all
    != javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jquery/1.4.1/jquery.min.js"
    != javascript_include_tag :defaults
    != csrf_meta_tag

  %body
    .wrap
      .header
        %h1!= link_to 'EnTwi', root_path
        .user-menu
          - if logged_in?
            != image_tag current_user.profile_image_url
            = current_user.login
            |
          != link_to 'ホーム', root_path
          |
          - if logged_in?
            != link_to 'ログアウト', logout_url(:return_to => request.fullpath)
          - else
            != link_to 'Twitter アカウントでログイン', login_url(:return_to => request.fullpath)
        .clear

      .main
        != yield

      .side
        side
