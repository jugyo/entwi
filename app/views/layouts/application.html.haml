!!!
%html
  %head
    %title Entwi
    != stylesheet_link_tag :all
    != javascript_include_tag :defaults
    != csrf_meta_tag

  %body
    .wrap
      .header
        %h1!= link_to 'EnTwi', root_path
        .user-menu
          - if logged_in?
            = current_user.login
            |
            != link_to 'ログアウト', logout_url(:return_to => request.fullpath)
          - else
            != link_to 'Twitter アカウントでログイン', login_url(:return_to => request.fullpath)
        .clear

      .main
        != yield

      .side
        side
