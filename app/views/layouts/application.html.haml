!!!
%html
  %head
    %title Entwi
    != stylesheet_link_tag :all
    != javascript_include_tag :defaults
    != csrf_meta_tag

  %body
    .header
      %h1!= link_to 'EnTwi', root_path
      .user-menu
        - if logged_in?
          = current_user.login
          |
          != link_to 'ログアウト', logout_url
        - else
          != link_to 'Twitter アカウントでログイン', login_url

    .main
      != yield

    .side
      side
